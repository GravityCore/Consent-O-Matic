{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "ameli_connect": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#pageConsentement"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#pageConsentement",
                            "displayFilter": true
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "hide",
                    "target": {
                        "selector": "#pageConsentement"
                    }
                },
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "trueAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": ".consentAccepter"
                                        }
                                    },
                                    "falseAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": ".consentRefuser"
                                        }
                                    },
                                    "type": "B"
                                }
                            ]
                        }
                    ]
                },
                "name": "DO_CONSENT"
            }
        ]
    }
}
